<UserControl x:Class="Starcraft2BuildPlanner.ResourceChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Starcraft2BuildPlanner"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas RenderTransformOrigin="0.5,0.5" Background="Orange">
        <Canvas.RenderTransform>
            <TransformGroup>
                <!-- Makes the point (0,0) appear in the lower left corner -->
                <ScaleTransform ScaleY="-1" ScaleX="1"/>
            </TransformGroup>
        </Canvas.RenderTransform>
        <Line X1="0" Y1="0" X2="12" Y2="75" StrokeThickness="1" Stroke="Black"/>
    </Canvas>
</UserControl>
